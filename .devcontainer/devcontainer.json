{
	"name": "Node.js",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "22" }
	},

	"customizations/vscode/settings": { 
		"terminal.integrated.defaultProfile.linux": "/bin/bash"
	},

