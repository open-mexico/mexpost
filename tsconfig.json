{
  "compilerOptions": {
      "strict": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "lib": ["es2021"],
      "target": "es2021",
      "module": "commonjs",
      "allowJs": false,
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": [
      "**/node_modules",
      "**/tests"
  ],
}